~~ 
Multiline Comments
~~

# Singleline comment #


y = "ሰላም"። # Variables #

# Conditionals #

ከሆነ (1+1 == 2 እና 2+2==4) {
    አሳይ(y)።     
}
ሌላ {
    አሳይ(":")።
}    

# Functions #

ተግባር ሙከራ(ሃ፣ መ){
    አሳይ(ሃ + 5)።
    አሳይ((መ/2) + 5)።
}

ሙከራ(6*2፣ 67)።

# Input #

ስም = ጠይቅ("እባክህ ስምህን አስገባ: ")።
አሳይ("ስላም " + ስም)።

# List Variables #

test = [1, 2, 3, 4, 5]።
አሳይ(test[0])።

# While Loops #

ገ = 1።

እያለ(ገ != 5){
    አሳይ(ገ)።
    ገ = ገ+1።
}

# For Loops #

ሮ = 15።

ለ (ሁ፣ ከ 1 እስከ 10){
    አሳይ(ሁ)።
}

###############################
# ---- Builtin Functions ---- #
###############################

# File I/O #
f = ክፈት("test.txt", "w")።
ጻፍ(f, "Hello Abyss")። 
ዝጋ(f)።

r = ክፈት("test.txt", "r")።
text = አንብብ(r)።
ዝጋ(r)።

አሳይ(text)።

# Math #

አሳይ(sin(90))።

# String #
መ = "ሃ፣ላ፣ፍ፣ር፣እ፣ቅ"።
አሳይ(ክፈል(መ፣ "፣"))።
አሳይ(መ[0])።